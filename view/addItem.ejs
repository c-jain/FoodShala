<body>
    <%- include('./includes/header.ejs') %>
    <div class="container">
        <div class="row">
            <div style="width: 30%; margin: 25px auto;">
                <h1 style="text-align:center;">Add New Item</h1>
                <form class="addItem" action="/api/user/additem" method="POST">

                    <div class="form-group">
                        <input class="form-control" type="text" name="name" id="addItemName" placeholder="Enter food item name" required>
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="number" name="price" id="addItemPrice" placeholder="Price " min="1" max="1000" required>
                    </div>

                    <div class = "form-group">
                        <select class="custom-select mr-sm-2" id="addItemType"  name="type"  required>
                            <option value="veg">Veg</option>
                            <option value="non-veg">Non-Veg</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">ADD</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
<%- include('./includes/footer.ejs') %>