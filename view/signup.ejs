<%- include('./includes/head.ejs') %>
</head>
<body>
<%- include('./includes/header.ejs') %>
    <div class="container">
        <div class="row">
            <div style="width: 30%; margin: 25px auto;">
                <h1 style="text-align:center;">Register</h1>
                <form id="signup" action="/api/user/signup" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" id="signupName" placeholder="Name " required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="email" name="email" id="signupEmail" placeholder="Email " required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" id="signupPassword" placeholder="Password" required>
                    </div>
                    <div class = "form-group">
                        <select class="custom-select mr-sm-2" id="signupPreference" name="preference" required>
                            <option selected>Choose preference</option>
                            <option value="veg">Veg</option>
                            <option value="non-veg">Non-Veg</option>
                        </select>
                    </div>
                    <div class = "form-group">
                        <select class="custom-select mr-sm-2" id="signupRole" name="role" required>
                            <option selected>Register As</option>
                            <option value="customer">Customer</option>
                            <option value="restaurant">Restaurant</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<%- include('./includes/footer.ejs') %>